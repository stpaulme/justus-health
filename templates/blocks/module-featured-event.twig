{% extends 'blocks/module.twig' %}

{% block content %}

	<div class="row">

		{% set image = Image(module.image) %}
		{% if image.src %}
			<div class="col-md-6">
				<picture>
					<source srcset="{{ image.src('3by2')|towebp }} 1110w, {{ image.src('3by2-md')|towebp }} 690w, {{ image.src('3by2-sm')|towebp }} 395w" sizes="(min-width: 992px) 48vw, 96vw" type="image/webp">
					<source srcset="{{ image.src('3by2') }} 1110w, {{ image.src('3by2-md') }} 690w, {{ image.src('3by2-sm') }} 395w" sizes="(min-width: 992px) 48vw, 96vw" type="image/jpeg">
					<img alt="{{ image.alt }}" class="featured-event__image" loading="lazy" src="{{ image.src('3by2') }}">
				</picture>
			</div>
		{% endif %}

		<div class="col-md-6">
			{% if module.title %}
				<h2 class="featured-event__title">{{ module.title }}</h2>
			{% endif %}

			{% if module.subtitle %}
				<span class="featured-event__subtitle">{{ module.subtitle }}</span>
			{% endif %}

			{% if module.date %}
				<time class="featured-event__date">{{ module.date }}</time>
			{% endif %}

			{% if module.date %}
				<address class="featured-event__location">
					{{ module.location }}
				</address>
			{% endif %}

			{% if module.description %}
				<div class="featured-event__description wysiwyg">{{ module.description }}</div>
			{% endif %}

			{% if module.link %}
				<div class="featured-event__link">
					<a class="button" href="{{ module.link.url }}" target="{{ module.link.target }}">{{ module.link.title }}</a>
				</div>
			{% endif %}
		</div>

	</div>

{% endblock %}
