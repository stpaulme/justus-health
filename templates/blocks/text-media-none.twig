{% set col_class = 'col-lg-9' %}

{% if module.copy and module.copy_2 %}
	{% set col_class = 'col-lg-6' %}
{% endif %}

{% if module.heading %}
	<div class="row">
		<div class="{{ col_class }}">
			<h2 class="text__heading text__heading--media-none">{{ module.heading }}</h2>
		</div>
	</div>
{% endif %}

<div class="row">
	<div class="{{ col_class }}">
		<div class="text__content">
			<div class="text__copy text-heavy wysiwyg">
				{{ module.copy }}
			</div>

			{% if module.link.url %}
				<div class="text__link">
					<a class="button" href="{{ module.link.url }}" target="{{ module.link.target }}">{{ module.link.title }}</a>
				</div>
			{% endif %}
		</div>
	</div>

	{% if module.copy_2 %}
		<div class="{{ col_class }}">
			<div class="text__content text__content--2">
				<div class="text__copy text-heavy wysiwyg">
					{{ module.copy_2 }}
				</div>

				{% if module.link_2.url %}
					<div class="text__link">
						<a class="button" href="{{ module.link_2.url }}" target="{{ module.link_2.target }}">{{ module.link_2.title }}</a>
					</div>
				{% endif %}
			</div>
		</div>
	{% endif %}
</div>
