{% extends 'blocks/module.twig' %}

{% block content %}

	<div class="row">

		<div class="col-md-8 offset-md-2">

			{% if module.heading %}
				<h2 class="form__heading">{{ module.heading }}</h2>
			{% endif %}

			{% if module.form_id %}
				{% filter shortcodes %}
					[gravityform id={{ module.form_id }}
					title=false description=false ajax=false]
				{% endfilter %}
			{% endif %}

		</div>

	</div>

{% endblock %}
